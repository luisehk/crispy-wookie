# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

# Use 2 spaces for the HTML files
[*.html]
indent_size = 2

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab
